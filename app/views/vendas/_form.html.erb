<%= form_for(@venda) do |f| %>

  <div class="container-fluid">

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <% if @venda.errors.any? %>
          <div class="alert alert-danger">
            <%= t 'general.form_error' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="form-group <%= (@venda.errors.has_key? :vendedor_usuario_id) ? "has-error" : ""  %>">
          <%= f.label :vendedor_usuario_id %><br>
          <%= f.select(:usuario_id, Usuario.all.collect {|a| [a.nome , a.id]}) %>
          <%= bootstrap_erro @venda, :vendedor_usuario_id %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="form-group <%= (@venda.errors.has_key? :veiculo_id) ? "has-error" : ""  %>">
          <%= f.label :veiculo_id %><br>
          <%= f.select(:veiculo_id, Veiculo.all.collect {|a| [a.placa, a.id]}) %>
          <%= bootstrap_erro @venda, :veiculo_id %>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="form-group <%= (@venda.errors.has_key? :data) ? "has-error" : ""  %>">
          <%= f.label :data, :class => "control-label" %>
          <%= f.text_field :data, :class => "form-control" %>
          <%= bootstrap_erro @venda, :data %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="form-group <%= (@venda.errors.has_key? :desconto) ? "has-error" : ""  %>">
          <%= f.label :desconto, :class => "control-label" %>
          <%= f.text_field :desconto, :class => "form-control" %>
          <%= bootstrap_erro @venda, :desconto %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="form-group <%= (@venda.errors.has_key? :comissao) ? "has-error" : ""  %>">
          <%= f.label :comissao, :class => "control-label" %>
          <%= f.text_field :comissao, :class => "form-control" %>
          <%= bootstrap_erro @venda, :comissao %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="form-group <%= (@venda.errors.has_key? :obs) ? "has-error" : ""  %>">
          <%= f.label :status, :class => "control-label" %>
          <%= f.text_field :status, :class => "form-control" %>
          <%= bootstrap_erro @venda, :status %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="form-group <%= (@venda.errors.has_key? :obs) ? "has-error" : ""  %>">
          <%= f.label :obs, :class => "control-label" %>
          <%= f.text_area :obs, :class => "form-control" %>
          <%= bootstrap_erro @venda, :obs %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="actions text-right">
          <%= f.submit :class => "btn btn-primary" %>
        </div>
      </div>
    </div>

  </div>

<% end %>
