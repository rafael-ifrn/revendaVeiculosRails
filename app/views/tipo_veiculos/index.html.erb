<p id="notice"><%= notice %></p>

<h2>Tipos de Veículos</h2>


<div class="container-fluid">

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <table class="table table-condensed table-hover">
        <thead>
          <tr>
            <th>Descrição</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @tipo_veiculos.each do |tipo_veiculo| %>
            <tr>
              <td><%= link_to tipo_veiculo.descricao, tipo_veiculo %></td>
              <td class="text-right">
                <a href="<%= edit_tipo_veiculo_path(tipo_veiculo) %>" class="btn btn-warning btn-xs">
                  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> <%= t('links.edit') %>
                </a>
                <a href="<%= tipo_veiculo_path(tipo_veiculo) %>" class="btn btn-danger btn-xs" data-confirm="<%= t('questions.sure') %>" rel="nofollow" data-method="delete" >
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> <%= t('links.destroy') %>
                </a>

              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<br>

<div class="text-center">
  <a href="<%= new_tipo_veiculo_path %>" class="btn btn-default">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= t('links.new') %>
  </a>
</div>
