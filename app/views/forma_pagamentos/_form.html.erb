<%= form_for(@forma_pagamento) do |f| %>

  <div class="container-fluid">

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <% if @forma_pagamento.errors.any? %>
          <div class="alert alert-danger">
            <%= t 'general.form_error' %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="form-group <%= (@forma_pagamento.errors.has_key? :descricao) ? "has-error" : ""  %>">
          <%= f.label :descricao, :class => "control-label" %>
          <%= f.text_field :descricao, :class => "form-control" %>
          <%= bootstrap_erro @forma_pagamento, :descricao %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="actions text-right">
          <%= f.submit :class => "btn btn-primary" %>
        </div>
      </div>
    </div>

  </div>

<% end %>
