<p id="notice"><%= notice %></p>

<h1>Listing Fabricantes</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fabricantes.each do |fabricante| %>
      <tr>
        <td><%= fabricante.descricao %></td>
        <td><%= link_to t('links.show'), fabricante %></td>
        <td><%= link_to t('links.edit'), edit_fabricante_path(fabricante) %></td>
        <td><%= link_to t('links.destroy'), fabricante, method: :delete, data: { confirm: t('questions.sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new'), new_fabricante_path %>
